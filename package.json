{
  "name": "beatbox.js",
  "version": "2.0.0",
  "description": "A step sequencer library for JavaScript that makes it easy to create JavaScript drumming machines that play patterns in an accurate way.",
  "main": "./dist/beatbox.js",
  "types": "./dist/beatbox.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/beatboxjs/beatbox.js.git"
  },
  "files": [
    "demo",
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
